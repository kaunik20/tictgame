<?xml version="1.0"?>

    <LinearLayout tools:context=".MainActivity"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#fff"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <TableLayout
        android:id="@+id/mainBoard"
        android:layout_width="325dp"
        android:layout_height="340dp"
        android:layout_gravity="top|center"
        android:clickable="true"
        android:gravity="center"
        android:nestedScrollingEnabled="false"
        android:padding="10dp">

        <TableRow
            android:id="@+id/row0"
            style="@style/TableRow"
            android:layout_width="match_parent"
            android:layout_height="196dp">

            <TextView
                style="@style/LeftCell"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_column="0"
                android:width="100dp"
                android:textColor="#ff2500"></TextView>

            <TextView
                style="@style/MiddleCell"
                android:layout_width="60dp"
                android:layout_height="100dp"
                android:layout_column="1"
                android:width="100dp"
                android:textColor="#ff2500"></TextView>

            <TextView
                style="@style/RightCell"
                android:layout_width="61dp"
                android:layout_height="100dp"
                android:layout_column="2"
                android:width="100dp"
                android:textColor="#ff2500"></TextView>

        </TableRow>

        <TableRow
            android:id="@+id/row1"
            style="@style/TableRow"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                style="@style/LeftCell"
                android:layout_width="96dp"
                android:layout_height="100dp"
                android:layout_column="0"
                android:width="100dp"
                android:textColor="#ff2500"></TextView>

            <TextView
                style="@style/MiddleCell"
                android:layout_width="73dp"
                android:layout_height="100dp"
                android:layout_column="1"
                android:width="100dp"
                android:textColor="#ff2500"></TextView>

            <TextView

                style="@style/RightCell"
                android:layout_width="81dp"
                android:layout_height="100dp"
                android:layout_column="2"
                android:width="100dp"
                android:textColor="#ff2500"></TextView>

        </TableRow>

        <TableRow
            android:id="@+id/row2"
            style="@style/TableRow"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                style="@style/LeftCell"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_column="0"
                android:width="100dp"
                android:textColor="#ff2500"></TextView>

            <TextView
                style="@style/MiddleCell"
                android:layout_width="96dp"
                android:layout_height="100dp"
                android:layout_column="1"
                android:width="100dp"
                android:textColor="#ff2500"></TextView>

            <TextView
                style="@style/RightCell"
                android:layout_width="91dp"
                android:layout_height="100dp"
                android:layout_column="2"
                android:width="100dp"
                android:textColor="#ff2500"></TextView>

        </TableRow>

    </TableLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="0dp"
        android:background="#ff2500" />

    <TextView
        android:id="@+id/turn"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:fontFamily="serif"
        android:gravity="left"
        android:padding="5dp"
        android:textStyle="bold"
        android:layout_marginStart="8dp"
        android:text="Turn:  "
        android:textColor="#ff2500"
        android:textSize="24dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="1dp"
        android:background="#ff2500" />


    <Button
        android:id="@+id/reset"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="132dp"
        android:background="#1589ff"
        android:textSize="15dp"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="   Restart   " />

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-5348647911544430/3253788143">

    </com.google.android.gms.ads.AdView>



</LinearLayout>